<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
        <RadioGroup
            android:id="@+id/rg_health_bar"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/bg_white"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_heartrate"
                android:drawableTop="@drawable/tab_health_heartrate"
                android:text="@string/tab_health_heartrate"
                style="@style/tab_menu_health" />
            <RadioButton
                android:id="@+id/rb_bloodpressure"
                android:drawableTop="@drawable/tab_health_bloodpressure"
                android:text="@string/tab_health_bloodpressure"
                style="@style/tab_menu_health" />
            <RadioButton
                android:id="@+id/rb_bloodoxygen"
                android:drawableTop="@drawable/tab_health_bloodoxygen"
                android:text="@string/tab_health_bloodoxygen"
                style="@style/tab_menu_health" />
        </RadioGroup>
    </LinearLayout>
